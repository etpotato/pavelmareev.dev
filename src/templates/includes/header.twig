{% import '../macros.twig' as macros %}

{% set navItems = [
  {
    name: "Skills",
    id: "tech",
  },
  {
    name: "Projects",
    id: "projects",
  },
  {
    name: "Experience",
    id: "resume",
  },
  {
    name: "Contact",
    id: "contacts",
  },
] %}

{% set contactItems = [
  {
    href: "mailto:mareev.pv@gmail.com",
    name: "mareev.pv@gmail",
  },
  {
    href: "https://t.me/etpotato",
    name: "telegram",
  },
] %}

<header class="page__header header no-js">
  <div class="header__wrap">
    <p class="header__lead">
      <span class="header__lead-name">Pavel Mareev</span>
      <span class="header__lead-job p2">frontend-developer</span>
    </p>
    <nav class="header__nav js-nav">
      <div class="header__nav-scroll js-nav-list">
        <ul class="header__nav-list js-nav-list">
          {% for item in navItems %}
            <li class="header__nav-item">
              <a class="header__nav-link js-nav-link" href="#{{ item.id }}">
                {{ item.name }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </nav>
    <ul class="header__contact-list">
      {% for contactItem in contactItems %}
        <li class="header__contact-item">
          {{ macros.extlink("header__contact-link p2", contactItem.href, contactItem.name) }}
        </li>
      {% endfor %}
    </ul>
  </div>
</header>
